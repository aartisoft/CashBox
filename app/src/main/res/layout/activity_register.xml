<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:gravity="center"
    android:background="@color/colorPrimary3"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context=".Login">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/ivLogo"
        android:src="@drawable/mainlogo_white"
        android:layout_below="@+id/activity_login_edt_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:textColor="@color/colorWhite"
        android:text="@string/src_Registrieren"/>

    <EditText
        android:id="@+id/activity_register_edt_fullname"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_person_outline_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/src_VollsteandigerNamer"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/activity_register_edt_email"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_mail_outline_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/src_Email"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/activity_register_edt_pw"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_lock_outline_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/src_Passwort"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:singleLine="true" />

    <EditText
        android:id="@+id/activity_register_edt_confirmpw"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_lock_outline_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/src_PasswortBestÃ¤tigen"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:singleLine="true" />

    <Button
        android:id="@+id/activity_register_btnregister"
        android:textColor="@color/colorButtonText"
        android:background="@drawable/roundedbutton_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/src_Registrieren"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/activity_register_tvaccouunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            android:text="@string/src_BereitsRegistriert"/>

        <TextView
            android:id="@+id/activity_register_tvlogin"
            android:layout_toRightOf="@id/activity_register_tvaccouunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="@string/src_HierAnmelden"/>

    </RelativeLayout>

</LinearLayout>