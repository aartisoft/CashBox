<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/colorPrimary3"
    android:padding="16dp"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    android:orientation="vertical"
    android:gravity="bottom">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/drawerheaderlogo"
        android:src="@drawable/appiconsmall"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/drawerheadercashiername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedienername"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/drawerheaderhostname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gewerbename"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/drawerheaderpartyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veranstaltungsname"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</LinearLayout>
