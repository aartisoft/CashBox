<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:gravity="center"
    android:background="@color/colorPrimary3"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    tools:context=".Login"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/ivLogo"
        android:src="@drawable/mainlogo_white"
        android:layout_below="@+id/activity_login_edt_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"/>

    <EditText
        android:id="@+id/activity_login_edt_email"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_email_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/src_Email"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/activity_login_edt_pw"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_lock_outline_white_24dp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorGreyBright"
        android:textColorHint="@color/colorWhite"
        android:textCursorDrawable="@drawable/colorcursor_grey"
        android:hint="@string/src_Passwort"
        android:password="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"/>

    <Button
        android:id="@+id/activity_login_btnlogin"
        android:textColor="@color/colorButtonText"
        android:background="@drawable/roundedbutton_grey"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/src_Anmelden"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/activity_login_tvnoaccouunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            android:text="@string/src_NochKeinenAccount"/>

        <TextView
            android:id="@+id/activity_login_tvnoaccouuntsignup"
            android:layout_toRightOf="@id/activity_login_tvnoaccouunt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="@string/src_HierRegistrieren"/>

    </RelativeLayout>



</LinearLayout>