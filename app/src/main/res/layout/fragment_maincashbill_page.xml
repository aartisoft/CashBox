<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_maincashbill_page_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp">

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment_maincashbill_lv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            tools:context="abhiandroid.com.listexample.MainActivity"
            android:divider="@color/colorGrey"
            android:dividerHeight="1dp"
            android:theme="@style/ListView">
        </ListView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fragment_maincashbill_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="bottom|right"
            app:layout_anchorGravity="bottom|right"
            app:fabSize="normal"
            app:backgroundTint="@color/colorPrimary3"
            android:src="@drawable/ic_check_white_24dp"
            android:scaleType="center"
            android:layout_margin="16dp"
            android:clickable="true"/>

    </FrameLayout>

</LinearLayout>