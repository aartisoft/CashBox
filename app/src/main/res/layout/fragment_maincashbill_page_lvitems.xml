<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
    android:padding="6dip">
    <ImageView
        android:id="@+id/fragment_maincashbill_page_lvitems_lv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="16dip"
        android:gravity="center_vertical"
        android:src="@drawable/ic_room_service_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/fragment_maincashbill_page_lvitems_lv"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_maincashbill_page_lvitems_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Produktname"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/fragment_maincashbill_page_lvitems_addinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:text="Zusatzinfo"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fragment_maincashbill_page_lvitems_vk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Verkaufspreis"
            android:textSize="12sp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/fragment_maincashbill_page_lvitems_cb"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dip"
        android:buttonTint="@color/colorPrimary3"
        android:text=""/>
</RelativeLayout>