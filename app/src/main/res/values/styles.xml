<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimary3</item>
        <item name="colorAccent">@color/colorPrimary4</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <!-- Style for ListView -->
    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:textColor">#030303</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorPrimary3</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary3</item>
        <item name="android:textSize">15dp</item>
        <item name="android:backgroundTint">@color/colorPrimary3</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary3</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
